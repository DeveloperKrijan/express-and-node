<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Task App</title>
</head>

<body class="bg-zinc-900 overflow-x-auto">

  <!-- ✅ Fixed Navbar -->
  <div
    class="intro fixed top-0 left-0 w-full text-white bg-red-900 flex flex-col items-center px-3 py-3 z-50 shadow-md">
    <h3 class="text-center text-sm sm:text-base">
      Hello Guyz, This is a simple backend project (Task App) without database developed by
      <span class="text-amber-300 font-semibold">Krijan Sayaju</span>.
    </h3>
  </div>

  <!-- ✅ Main Content -->
  <div class="main w-full min-h-screen flex flex-col items-center pt-24 px-4">

    <!-- ✅ Form Section -->
    <div class="form p-8 text-white bg-zinc-900 border-2 border-gray-600 rounded-xl shadow-lg w-full max-w-xl mx-auto">
      <form action="/create" method="post">
        <input class="block w-full px-6 py-2 rounded-md outline-none border-2 border-indigo-900/100 bg-zinc-900 mb-3"
          type="text" name="title" placeholder="Title goes here" />
        <textarea
          class="block w-full px-6 py-2 rounded-md outline-none border-2 border-indigo-900/100 mb-3 resize-none bg-zinc-900"
          name="details" placeholder="Write your task details here"></textarea>
        <input class="bg-blue-600 px-5 py-2 rounded-md cursor-pointer w-full hover:bg-blue-700 transition" type="submit"
          value="Create Task" />
      </form>
    </div>

    <!-- ✅ Tasks Section -->
    <div class="tasks p-10 flex gap-4 flex-wrap justify-center w-full max-w-5xl mt-10">
      <% if (files.length> 0) { %>
        <% files.forEach(function(val) { %>
          <div class="task min-w-72 px-4 py-4 rounded-md bg-zinc-800 shadow-md w-full sm:w-72">
            <h1 class="text-white text-xl font-semibold tracking-tight break-words">
              <%= val %>
            </h1>
            <div class="flex w-full gap-3 justify-between mt-3 items-center">
              <a class="text-blue-500 hover:underline" href="/file/<%= val %>">Read more</a>
              <a class="text-zinc-400 hover:text-zinc-200" href="/edit/<%= val %>">Edit filename</a>

 <!-- ✅ Delete Form -->
 <form action="/delete" method="POST" class="">
  <input type="hidden" name="title" value="<%= val %>">
  <button type="submit" class="text-red-500 hover:text-red-700 text-sm">Delete</button>
</form>

            </div>


          </div>
          <% }) %>
            <% } else { %>
              <h3 class="text-zinc-600 text-center w-full">No task yet.</h3>
              <% } %>
    </div>

  </div>

  <script src="/javascripts/script.js"></script>
</body>

</html>